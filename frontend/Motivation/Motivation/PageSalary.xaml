<UserControl x:Class="Motivation.PageSalary"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
    <Grid>

        <TextBlock HorizontalAlignment="Left" Margin="100,0,0,0" TextWrapping="Wrap" Text="Месяц зарплаты:" VerticalAlignment="Top" FontSize="20"/>
        <TextBlock x:Name="DateTime" HorizontalAlignment="Left" Margin="260,0,0,0" TextWrapping="Wrap" Text="{Binding}" VerticalAlignment="Top" FontSize="20"/>

        <TextBlock HorizontalAlignment="Left" Margin="100,40,0,0" TextWrapping="Wrap" Text="Зарплата:" VerticalAlignment="Top" FontSize="20"/>
        <TextBlock x:Name="salary" HorizontalAlignment="Left" Margin="190,40,0,0" TextWrapping="Wrap" Text="{Binding}" VerticalAlignment="Top" FontSize="20"/>
        <TextBlock HorizontalAlignment="Left" Margin="300,40,0,0" TextWrapping="Wrap" Text="Премия:" VerticalAlignment="Top" FontSize="20" />
        <TextBlock x:Name="bonus" HorizontalAlignment="Left" Margin="380,40,0,0" TextWrapping="Wrap" Text="{Binding}" VerticalAlignment="Top" FontSize="20"/>
    </Grid>
    </UserControl>

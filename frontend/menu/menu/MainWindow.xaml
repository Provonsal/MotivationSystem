<Window x:Class="menu.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:menu"
        mc:Ignorable="d"
        Title="MainWindow" 
        WindowState = "Maximized"
       >
    <Grid>

        <Button x:Name="Home" Content="Главная" HorizontalAlignment="Left" Margin="100,50,0,0" VerticalAlignment="Top" Width="150" Height="50" FontSize="20" Click="Home"/>

        <Button x:Name="Rating" Content="Рейтинг" HorizontalAlignment="Left" Margin="300,50,0,0" VerticalAlignment="Top" Width="150" Height="50" FontSize="20" Click="Rating"/>

        <Button x:Name="Deal" Content="Сделки" HorizontalAlignment="Left" Margin="500,50,0,0" VerticalAlignment="Top" Width="150" Height="50" FontSize="20" Click="Deal"/>

        <Button x:Name="Salary" Content="Зарплата" HorizontalAlignment="Left" Margin="700,50,0,0" VerticalAlignment="Top" Width="150" Height="50" FontSize="20" Click="Salary"/>

        <ContentControl x:Name="MainContent" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="0,200,0,0"/>

    </Grid>
</Window>
